<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnson.fingerprintpunch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FingerprintPunch">
        <activity android:name=".activity.AddStudentActivity"
            android:allowBackup="true"></activity>
        <activity android:name=".activity.DetailActivity"
            android:allowBackup="true"/>
        <activity android:name=".activity.InputActivity"
            android:allowBackup="true"/>
        <activity
            android:name=".activity.MainActivity"
            android:allowBackup="true" />
        <activity
            android:name=".activity.RegisterActivity"
            android:allowBackup="true" />
        <activity android:name=".activity.LoginActivity"
            android:launchMode="singleTask"
            android:allowBackup="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>